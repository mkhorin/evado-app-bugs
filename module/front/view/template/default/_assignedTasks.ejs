<template id="assigned-tasks">
    <div class="page">

        <breadcrumbs>
            <template #path>
                <li class="breadcrumb-item"><a @click.prevent="toMain" href="#" data-t="">Main</a></li>
                <li class="breadcrumb-item" data-t="meta">Assigned tasks</li>
            </template>
        </breadcrumbs>

        <h1 data-t="">Tasks assigned to me</h1>

        <div class="loadable-container">

            <div class="task-items">
                <div v-for="item of items" :key="item.id" class="task-item">
                    <div class="cell">
                        <label data-t="meta">State</label>
                        <div class="value">
                            <b data-t="meta">{{item.state}}</b>
                        </div>
                    </div>
                    <div class="cell">
                        <div class="value">
                            <a @click.prevent="onTask(item.id)" href="#">{{item.summary}}</a>
                        </div>
                    </div>
                    <div class="cell">
                        <label data-t="meta">Priority</label>
                        <div class="value">
                            <b data-t="meta">{{item.priority}}</b>
                        </div>
                    </div>
                </div>
            </div>

            <pagination></pagination>

            <div v-show="!loading && empty" class="alert-warning alert">
                <span data-t="">You have no tasks</span>
            </div>

            <div v-show="loading" class="loader">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
    </div>
</template>