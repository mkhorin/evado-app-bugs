
<div class="page" data-page="assignedTask" data-handler="AssignedTaskPage">

    <div class="task loadable-container" data-handler="AssignedTask">

        <template data-id="task">
            <div class="page-head">
                <ol class="breadcrumb">
                    <li><a href="#" data-action="main" data-t="">Main</a></li>
                    <li><a href="#" data-action="assignedTasks" data-t="meta">Tasks</a></li>
                    <li data-t="">#{{_id}}</li>
                </ol>
            </div>

            <h1>{{summary}}</h1>

            <div class="form-horizontal form">
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">State</label>
                    <div class="col-xs-9">
                        <div class="form-control-static"><b data-t="meta">{{state}}</b></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Description</label>
                    <div class="col-xs-9">
                        <div class="form-control-static">{{description}}</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Project</label>
                    <div class="col-xs-9">
                        <div class="form-control-static"><span data-t="meta">{{project}}</span></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Priority</label>
                    <div class="col-xs-9">
                        <div class="form-control-static"><b data-t="meta">{{priority}}</b></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Author</label>
                    <div class="col-xs-9">
                        <div class="form-control-static">{{author}}</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Hours spent</label>
                    <div class="col-xs-9">
                        <div class="form-control-static">{{timeSpent}}</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label" data-t="meta">Created at</label>
                    <div class="col-xs-9">
                        <div class="form-control-static">{{createdAt}}</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-3 col-xs-9">
                        {{start}}
                        {{stop}}
                    </div>
                </div>
            </div>
        </template>

        <template data-id="start">
            <button class="btn-success btn" type="button" data-command="start">
                <span data-t="meta">Start working</span>
            </button>
        </template>

        <template data-id="stop">
            <button class="btn-primary btn" type="button" data-command="complete">
                <span data-t="meta">Complete</span>
            </button>
            <button class="btn-warning btn" type="button" data-command="stop">
                <span data-t="meta">Stop working</span>
            </button>
        </template>

        <template data-id="error">
            <div class="alert-danger alert">{{text}}</div>
        </template>

        <div class="loadable-content"></div>
        <div class="loader"><i class="fa fa-spinner fa-spin"></i></div>
    </div>
</div>