<template id="main-page">
    <div class="page">

        <h1 data-t="">Bug Tracking System</h1>

        <p v-if="executor" data-t="">Front interface for task executors.</p>

        <p v-if="manager" data-t="">Front interface for managers.</p>

        <div class="mt-3">
            <a v-if="guest" href="auth/sign-in?returnUrl=/front" class="btn-primary btn">
                <span data-t="">Sign in or Register</span>
            </a>
            <template v-else>
                <button v-if="executor" @click="toAssignedTasks" class="btn-primary btn">
                    <span data-t="meta">Assigned tasks</span>
                </button>
                <button v-if="manager" @click="toCreatedTasks" class="btn-primary btn">
                    <span data-t="meta">Created tasks</span>
                </button>
                <div v-if="!executor && !manager" class="alert alert-warning">
                    <span data-t="">Please login as executor or manager to continue</span>
                </div>
            </template>
        </div>
    </div>
</template>